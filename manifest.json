{
	"name": "Verified NFT",
	"version": "1.0",
	"description": "",
	"manifest_version": 3,
	"incognito": "split",
	"icons": {
		"128": "icons/128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.opensea.io/*"
			],
			"all_frames": true,
            "css": [
                "theme/styles.css"
            ],
			"js": [
				"scripts/verify-item.js"
			],
			"run_at": "document_end"
		}
	],
    "action": {
		"default_icon": "icons/128.png",
		"default_popup": "popup/popup.html"
	},
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
      "*://*.opensea.io/*"
     ]
	
}

